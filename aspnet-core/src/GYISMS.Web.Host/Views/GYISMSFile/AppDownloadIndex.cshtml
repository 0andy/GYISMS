
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>离线应用</title>
</head>
<body>
    <div style="padding:8px 16px;float:center">
        <div style="width:100%;font-size:14px;padding: 8px 0px;color:gray;">
            <text>离线应用</text>
        </div>
        <div style="width:100%;font-size:14px;height: 30px;">
            <div style="float:left">
                <text>应用名称：</text>
            </div>
            <div style="float:right;color:gray;">
                <text>@ViewBag.appName</text>
            </div>
        </div>
        <div style="width:100%;font-size:14px;height: 30px;">
            <div style="float:left;">
                <text>最新版本：</text>
            </div>
            <div style="float:right;color:gray;">
                <text>@ViewBag.version</text>
            </div>
        </div>
        <div style="width:100%;font-size:14px;height: 47px;">
            <p>账号：</p>
            <div style="float:left">
                <input id="account" value="@ViewBag.account" readonly />
            </div>
            <div style="float:right">
                <button style="display: block;border-radius: 5px;line-height: 1.17333333rem;" onclick="copyAccount()">点击复制账号</button>
            </div>
        </div>
        <div style="width:100%;font-size:14px;height: 47px;">
            <p>密码：</p>
            <div style="float:left">
                <input id="password" value="@ViewBag.password" readonly />
            </div>
            <div style="float:right">
                <button style="display: block;border-radius: 5px;line-height: 1.17333333rem;" onclick="copyPassword()">点击复制密码</button>
            </div>
        </div>
        <div style="text-align:center;margin-top:20px;height: 40px;">
            <a style="display: none;" id="downUrl" href="@ViewBag.downloadUrl">
            </a>
            <button style="margin-top: 20px;width: 100%;height: 47px;background: #3296FA;display: block;color: #fff; border-radius: 10px;line-height: 1.17333333rem; font-weight: bold;" type="button" onclick="downLoad()">点击下载</button>
        </div>
    </div>

    <script>
        function copyAccount() {
            var Url = document.getElementById("account");
            Url.select(); // 选择对象
            document.execCommand("Copy"); // 执行浏览器复制命令
            alert("复制成功！");
        }

        function copyPassword() {
            var Url = document.getElementById("password");
            Url.select(); // 选择对象
            document.execCommand("Copy"); // 执行浏览器复制命令
            alert("复制成功！");
        }
        function downLoad() {
            document.getElementById('downUrl').click();
        }
    </script>
</body>
</html>
